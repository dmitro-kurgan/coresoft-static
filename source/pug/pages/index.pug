extends ../templates/base

block variables
	- var classBody = 'index-page'
	- var classWrapper = 'index'

block title
	title Index

block header
	include ../modules/header
	+header()
block main
	section.banner(style='background-image: url(' + require('../../components/images/banner-background.jpg') + ')')
		.container
			.banner__content
				.banner__main
					.banner__slider
						.banner__btns
							a(href="#").btn.btn--blue Explore Markets
							a(href="#").btn.btn--red Register
						.sldier.slick-banner
							mixin slickSlider(title, text)
								div
									.slick-banner__box
										h1= title
										p= text
							+slickSlider('Destributed Ladger technology', 'Ensure  transparency and managebility  to busineses and institutions through Data analytics and distributed ledger technologies development implimentation and adoption')
							+slickSlider('Destributed Ladger technology', 'Ensure  transparency and managebility  to busineses and institutions through Data analytics and distributed ledger technologies development implimentation and adoption')
							+slickSlider('Destributed Ladger technology', 'Ensure  transparency and managebility  to busineses and institutions through Data analytics and distributed ledger technologies development implimentation and adoption')
	section.learn-more.learn-more--light

	section.history
		.container
			.row
				.history__content
					.history__left.col-sm-5
						
							h2 our history
							p.
								.We started a company for DLT implimentation and development in 2012. First product was Coidrive a distributed ladger wallet to process store and verify transactions ( documents) which was white labeled to several corporate customers..
							a(href="#").btn Read more
					.history__right.col-sm-7
							img(src=require("../../components/images/mac-iphone.png"))
	section.learn-more.learn-more--dark
		.container
			.learn-more__content
				.skew-line.skew-line--left
				.skew-line.skew-line--right
				p Help your businesses institutions and organisations to adop distributed ledger technology data analyses and get maximum efficiency through it
				a(href="#").btn.btn--learn Learn More
	section.whywe
		.container
			.whywe__content
				ul.row
					li.col-sm-4
						.whywe__box
							.whywe__img
								img(src=require('../../components/images/why-we-pic-1.png'))
							.whywe__text
								p
									| Why we are best
					mixin whywe(img, text)
						li.col-sm-4
							.whywe__box
								.whywe__img
									img(src=require('../../components/images/why-we-pic-' + img + '.png'))
								.whywe__text
									p= text	
					+whywe('2', 'We are just the best, because nobody does DLT better than we do')
					+whywe('3', 'BI with expirience in corporate NGO goverment and early stage managemnt alway know the cure for their pain')
					+whywe('4', 'Custumer support on best practices build with integrators of high corporate segment level of exelance ')
					+whywe('5', 'Skilled tech team operating from the begining of DLT in mass')
					+whywe('6', 'Great Delivery and perfomance as we are in high tech products for more than 600 years in total')
	section.signup
		.container
			.signup__content
				h2 Sign Up and start trading
				form
					.form-group
						input.form-control(type="text", placeholder="Email Address")
					.form-group
						input.form-control(type="password", placeholder="Password")
					.form-group
						input.form-control(type="password", placeholder="Confirm Password")
					.checkbox
						label(for='agree')
							input(type='checkbox', name='agree', id='agree')
							.checkbox-square
							| I agree to the DLT
							a(href="#") Terms of Service
					.form-group.col-sm-12
							button.btn.btn--red(type="submit") Register
block footer
	- var nav = require('../../data/nav.json')
	footer
		.footer
			.container
				.footer__content
					.footer__menu.clearfix
						.footer__menu-click Home
						ul
							each link, title in nav.navPages
								li
									a(href= link)= title
					.footer__copyright
						p 
